#imports
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import requests

# placeholder example
url = "PA_API_ENDPOINT"
response = requests.get(url)
pa_df = pd.DataFrame(response.json()["data"])
pa_df.head()

# load epa data
epa_df = pd.read_csv("data/epa_city1.csv")
epa_df.head()

# clean and align data
pa_df['timestamp'] = pd.to_datetime(pa_df['timestamp'])
epa_df['timestamp'] = pd.to_datetime(epa_df['timestamp'])

# compute raw error
merged_df = pd.merge_asof(
    pa_df.sort_values('timestamp'),
    epa_df.sort_values('timestamp'),
    on='timestamp',
    direction='nearest'
)

# initial correction formula
merged_df.head()

merged_df['raw_error'] = merged_df['pm25_pa'] - merged_df['pm25_epa']
merged_df[['raw_error']].describe()

from sklearn.linear_model import LinearRegression

X = merged_df[['humidity', 'temperature']]
y = merged_df['pm25_epa']

model = LinearRegression()
model.fit(X, y)

merged_df['corrected_pm25'] = model.predict(X)

# visual comparison using Jypter Notebook
plt.figure(figsize=(8,5))
plt.plot(merged_df['timestamp'], merged_df['pm25_pa'], label='PurpleAir')
plt.plot(merged_df['timestamp'], merged_df['corrected_pm25'], label='Corrected')
plt.plot(merged_df['timestamp'], merged_df['pm25_epa'], label='EPA')
plt.legend()
plt.show()
